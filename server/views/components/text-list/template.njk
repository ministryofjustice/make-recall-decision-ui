{% from "components/heading/macro.njk" import heading %}

<div class="car-text-list{{ " " + params.classes if params.classes else ""}}">
    {% if params.heading %}
        {{ heading(
            params.heading,
            params.headingLevel if params.headingLevel else 2,
            params.headingSize if params.headingSize else 's',
            params.headingClasses)
        }}
    {% endif %}

    {% for row in params.rows %}
        <div class="car-text-list__row">
            <div class="car-text-list__key">{{ row.key }}</div>
            <div class="car-text-list__value">{{ row.value }}</div>
        </div>
    {% endfor %}
</div>
