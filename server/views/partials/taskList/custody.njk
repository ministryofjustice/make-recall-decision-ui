
<li>
    <h2 class="moj-task-list__section" id='heading-custody'>
        Provide information about custody
    </h2>
    <ul class="moj-task-list__items">
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'custody-status', urlInfo: urlInfo, fromAnchor: 'heading-custody' }) }}">{{ pageHeadings.custodyStatus }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.custodyStatus }) }}
        </li>
        {% if recommendation.isInCustody == false %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ urlInfo.basePath }}police-details">{{ pageHeadings.localPoliceContactDetails }}</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.localPoliceContact }) }}
            </li>
        {% endif %}
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ urlInfo.basePath }}iom">{{ pageHeadings.integratedOffenderManagement }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.isUnderIntegratedOffenderManagement }) }}
        </li>
        {% if recommendation.isInCustody == false %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ urlInfo.basePath }}arrest-issues">{{ pageHeadings.arrestIssues }}</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.hasArrestIssues }) }}
            </li>
        {% endif %}
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ urlInfo.basePath }}contraband">{{ pageHeadings.contraband }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.hasContrabandRisk }) }}
        </li>
    </ul>
</li>