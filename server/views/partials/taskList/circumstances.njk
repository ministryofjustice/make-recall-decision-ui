
<li>
    <h2 class="moj-task-list__section" id='heading-circumstances'>
        Provide information about the circumstances
    </h2>
    <ul class="moj-task-list__items">
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'response-to-probation', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">{{ pageHeadings.responseToProbation }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.responseToProbation }) }}
        </li>
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'licence-conditions', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">{{ pageHeadings.licenceConditions }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.licenceConditionsBreached }) }}
        </li>
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'alternatives-tried', urlInfo: urlInfo, fromAnchor: 'heading-alternatives' }) }}">{{ pageHeadings.alternativesToRecallTried }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.alternativesToRecallTried }) }}
        </li>
        {% if recommendation.recallType.selected.value != 'NO_RECALL' %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ urlInfo.basePath }}what-led">{{ pageHeadings.whatLedToRecall }}?</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.whatLedToRecall }) }}
            </li>
        {% endif %}
        {% if recommendation.isIndeterminateSentence == false and recommendation.isExtendedSentence == false and recommendation.recallType.selected.value === 'STANDARD' %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'emergency-recall', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">{{ pageHeadings.emergencyRecall }}</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.isThisAnEmergencyRecall }) }}
            </li>
        {% endif %}
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'is-indeterminate', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">{{ pageHeadings.isIndeterminateSentence }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.isIndeterminateSentence }) }}
        </li>
        {% if recommendation.isIndeterminateSentence == true %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'indeterminate-type', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">Type of indeterminate sentence</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.indeterminateSentenceType }) }}
            </li>
        {% endif %}
        <li class="moj-task-list__item">
            <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'is-extended', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">{{ pageHeadings.isExtendedSentence }}</a>
            {{ taskStatus({ hasData: taskCompleteness.statuses.isExtendedSentence }) }}
        </li>
        {% if recommendation.isIndeterminateSentence == false and recommendation.isExtendedSentence == false and recommendation.recallType.selected.value === 'FIXED_TERM' %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'fixed-licence', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">Add any additional licence conditions - fixed term recall</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.fixedTermAdditionalLicenceConditions }) }}
            </li>
        {% endif %}
        {% if recommendation.isIndeterminateSentence == true and recommendation.recallType.selected.value != 'NO_RECALL' %}
            <li class="moj-task-list__item">
                <a class="moj-task-list__task-name" href="{{ changeLinkUrl({ pageUrlSlug: 'indeterminate-details', urlInfo: urlInfo, fromAnchor: 'heading-circumstances' }) }}">Confirm the recall criteria - indeterminate and extended sentences</a>
                {{ taskStatus({ hasData: taskCompleteness.statuses.indeterminateOrExtendedSentenceDetails }) }}
            </li>
        {% endif %}

    </ul>
</li>