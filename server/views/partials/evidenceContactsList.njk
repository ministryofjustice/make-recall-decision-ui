{% from "components/select-component/macro.njk" import selectComponent %}

{% if addedContacts.length %}
    <ul class='govuk-list'>
        {% for contact in addedContacts %}
            <li>
            <div class='flex flex--space-between border-bottom govuk-!-padding-top-1 govuk-!-padding-bottom-1 govuk-!-margin-bottom-1 govuk-!-font-size-16'>
                <div>
                    {{ contact.descriptionType }}
                </div>
                {{ selectComponent({
                    contact: contact,
                    componentType: 'contact',
                    crn: crn,
                    csrfToken: csrfToken
                }) }}
            </div>
            </li>{% endfor %}
    </ul>
{% else %}
    <p class='govuk-body'>None added yet, choose contacts from the list.</p>
{% endif %}
<div>
    <a href='/recommendation/{{ crn }}/cause' class='govuk-button govuk-button--primary govuk-!-margin-bottom-0'>Continue</a>
</div>