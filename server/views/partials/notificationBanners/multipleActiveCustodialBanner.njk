{% if caseSummary.convictions.hasMultipleActiveCustodial %}
    {% set html %}
        <p class="govuk-notification-banner__heading">
            {% if caseSummary.convictions.hasAllConvictionsReleasedOnLicence %}
             This person has 2 or more active convictions in NDelius. Double-check that the information in NDelius is correct.
            {% else %}
                This person has 2 or more active convictions in NDelius. They are not on licence in NDelius for at least one of these convictions. Check the throughcare details in NDelius are correct.
            {% endif %}
        </p>
    {% endset %}

    {{ govukNotificationBanner({
        html: html,
        attributes: {
            'data-qa': 'banner-multiple-active-custodial',
            'data-analytics-event': 'notification_banner',
            'data-analytics-event-category': 'multipleCustodialConvictions' if caseSummary.convictions.hasAllConvictionsReleasedOnLicence else 'multipleCustodialConvictionsNotAllReleasedOnLicence',
            'data-analytics-event-label': caseSummary.convictions.activeCustodial.length
        },
        classes: "govuk-notification-banner--error"
    }) }}
{% endif %}