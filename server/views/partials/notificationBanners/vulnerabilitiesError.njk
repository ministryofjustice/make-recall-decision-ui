{% set html %}
    <div data-qa='banner-vulnerabilities-no-data'>
        <p class="govuk-notification-banner__heading">
            {% if caseSummary.vulnerabilities.error == 'NOT_FOUND' %}
            This information cannot be retrieved from OASys. Double-check as it may be out of date.
            {% else %}
            Vulnerability information cannot be retrieved from OASys.
            <ul class='govuk-list govuk-heading-s'>
                <li>R8.1 Suicide and/or self-harm</li>
                <li>R8.2 Coping in custody or a hostel</li>
                <li>R8.3 Vulnerability</li>
            </ul>
        {% endif %}
        </p>
    </div>
{% endset %}
{{ govukNotificationBanner({
    html: html,
    classes: "govuk-notification-banner--error",
    attributes: {
        'data-analytics-event': 'notification_banner',
        'data-analytics-event-category': 'oasysVulnerabilitiesError'
    }
}) }}
