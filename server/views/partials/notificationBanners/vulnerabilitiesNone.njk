{% set html %}
    <div data-qa='banner-vulnerabilities-no-data'>
        <p class="govuk-notification-banner__heading">
            The latest complete OASys assessment has no information for:
        </p>
        <ul class='govuk-list govuk-heading-m'>
            <li>R8.1 Suicide and/or self-harm</li>
            <li>R8.2 Coping in custody or a hostel</li>
            <li>R8.3 Vulnerability</li>
        </ul>
        <p class="govuk-notification-banner__heading">
            <a href='{{ urlInfo.baseUrl }}contact-history'>Check the contact history</a> for vulnerability information in NDelius.
        </p>
    </div>
{% endset %}
{{ govukNotificationBanner({
    html: html,
    attributes: {
        'data-analytics-event': 'notification_banner',
        'data-analytics-event-category': 'oasysVulnerabilitiesNoData'
    }
}) }}
