<div class="govuk-accordion" data-module="govuk-accordion" id="accordion-with-summary-sections">
    <div class="govuk-accordion__section" data-qa='standard'>
        <div class="govuk-accordion__section-header">
            <h2 class="govuk-accordion__section-heading">
                <span class="govuk-accordion__section-button" id="accordion-with-summary-sections-heading-1">
                 Standard licence conditions
                </span>
            </h2>
       </div>
       <div id="accordion-with-summary-sections-content-1"
            class="govuk-accordion__section-content"
            aria-labelledby="accordion-with-summary-sections-heading-1">
            {% for condition in caseSummary.cvlLicence.standardLicenceConditions %}
            <section class="app-summary-card app-summary-card--white govuk-!-margin-bottom-6">
                <div class="app-summary-card__header">
                    <div class="app-summary-card__title">
                    {{ condition.text }}
                    </div>
                </div>
            </section>
            {% endfor %}
       </div>
    </div>
    {% if caseSummary.cvlLicence.additionalLicenceConditions and caseSummary.cvlLicence.additionalLicenceConditions.length > 0 %}
    <div class="govuk-accordion__section govuk-accordion__section--expanded" data-qa='additional'>
        <div class="govuk-accordion__section-header">
            <h2 class="govuk-accordion__section-heading">
                <span class="govuk-accordion__section-button" id="accordion-with-summary-sections-heading-2">
                    Additional licence conditions
                </span>
            </h2>
        </div>
        <div id="accordion-with-summary-sections-content-2"
            class="govuk-accordion__section-content"
            aria-labelledby="accordion-with-summary-sections-heading-2">
            {% set conditionNumber = 1 %}
            {% for licenceCondition in caseSummary.cvlLicence.additionalLicenceConditions %}
                {% set conditionHtml %}
                    <p class='govuk-body' data-qa='condition-note'>{{ licenceCondition.expandedText }}</p>
                {% endset %}
                {{ appSummaryCard({
                    titleText: licenceCondition.category,
                    headingLevel: 3,
                    classes: 'govuk-!-margin-bottom-6 app-summary-card--medium-title',
                    html: conditionHtml,
                    attributes: {
                        'data-qa': 'additional-condition-' + conditionNumber
                    }
                }) }}

                {% set conditionNumber = conditionNumber + 1 %}
            {% endfor %}
       </div>
    </div>
    {% endif %}

    {% if caseSummary.cvlLicence.bespokeConditions and caseSummary.cvlLicence.bespokeConditions.length > 0 %}
    <div class="govuk-accordion__section govuk-accordion__section--expanded" data-qa='bespoke'>
        <div class="govuk-accordion__section-header">
          <h2 class="govuk-accordion__section-heading">
              <span class="govuk-accordion__section-button" id="accordion-with-summary-sections-heading-3">
                Bespoke licence conditions
              </span>
          </h2>
        </div>
        <div id="accordion-with-summary-sections-content-3"
           class="govuk-accordion__section-content"
           aria-labelledby="accordion-with-summary-sections-heading-3">
           {% for condition in caseSummary.cvlLicence.bespokeConditions %}
           <section class="app-summary-card app-summary-card--white govuk-!-margin-bottom-6">
               <div class="app-summary-card__header">
                   <div class="app-summary-card__title">
                   {{ condition.text }}
                   </div>
               </div>
           </section>
           {% endfor %}
        </div>
    </div>
    {% endif %}
</div>