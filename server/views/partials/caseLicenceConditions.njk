<h1 class='govuk-heading-m govuk-visually-hidden'>Licence conditions<span
            class='govuk-visually-hidden'> for {{ caseSummary.personalDetailsOverview.name }}</span></h1>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        {% include './multipleActiveCustodialBanner.njk' %}
        {% if caseSummary.convictions.active.length %}
        <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-default">
            <div class="govuk-accordion__section">
                <div class="govuk-accordion__section-header">
                    <h2 class="govuk-accordion__section-heading">
                        <span class="govuk-accordion__section-button" id="accordion-with-summary-sections-heading-0">
                          Standard licence conditions
                        </span>
                    </h2>
                </div>
                <div id="accordion-with-summary-sections-content-0"
                     class="govuk-accordion__section-content"
                     aria-labelledby="accordion-with-summary-sections-heading-0">
                    {% for condition in caseSummary.standardLicenceConditions %}
                        {% set descriptionHtml %}
                            <pre class='govuk-body'>{{ condition.description }}</pre>
                        {% endset %}
                        {{ appSummaryCard({
                            titleHtml: condition.text,
                            headingLevel: 4,
                            classes: 'app-summary-card--white govuk-!-margin-bottom-3' + (' app-summary-card--highlight' if contact.added),
                            html: descriptionHtml if condition.description else undefined
                        }) }}
                    {% endfor %}
                </div>
            </div>
            <div class="govuk-accordion__section govuk-accordion__section--expanded">
                <div class="govuk-accordion__section-header">
                    <h2 class="govuk-accordion__section-heading">
                        <span class="govuk-accordion__section-button" id="accordion-with-summary-sections-heading-1">
                          Additional licence conditions
                        </span>
                    </h2>
                    <div class="govuk-accordion__section-summary govuk-body"
                         id="accordion-with-summary-sections-summary-1">
                        {% for conviction in caseSummary.convictions.activeCustodial %}
                            {% for mainOffence in conviction.offences.main %}
                                <div class='govuk-caption-m'>{{ mainOffence }}</div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
                <div id="accordion-with-summary-sections-content-1"
                     class="govuk-accordion__section-content"
                     aria-labelledby="accordion-with-summary-sections-heading-1">
                    {% for conviction in caseSummary.convictions.activeCustodial %}
                        {% if caseSummary.convictions.hasMultipleActiveCustodial %}<h3 class='govuk-heading-s'>{% for mainOffence in conviction.offences.main %}{{ mainOffence }}{% endfor %}</h3>{% endif %}
                        {% if conviction.licenceConditions.length %}
                            {% for licenceCondition in conviction.licenceConditions %}
                                {% set conditionHtml %}
                                    <p class='govuk-body' data-qa='condition-description'>{{ licenceCondition.licenceConditionTypeSubCat.description }}</p>
                                    <h5 class='govuk-heading-s govuk-!-margin-top-4 govuk-!-margin-bottom-1'>Further note</h5>
                                    <p class='govuk-body' data-qa='condition-note'>{{ licenceCondition.licenceConditionNotes if licenceCondition.licenceConditionNotes else 'There are no notes relating to this licence condition' }}</p>
                                {% endset %}
                                {{ appSummaryCard({
                                    titleText: licenceCondition.licenceConditionTypeMainCat.description,
                                    headingLevel: 4,
                                    classes: 'govuk-!-margin-bottom-6 app-summary-card--medium-title',
                                    html: conditionHtml,
                                    attributes: {
                                        'data-qa': 'additional-condition'
                                    }
                                }) }}
                            {% endfor %}
                        {% else %}
                            <p class='govuk-body'>None available.</p>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        {% else %}
        <p class='govuk-body'>There are no licence conditions available.</p>
        {% endif %}
    </div>
</div>
