{% if errors %}
    {{ govukErrorSummary({
        titleText: "There is a problem",
        errorList: errors.list,
        attributes: {
            'data-qa': 'error-list'
        }
    }) }}
    <script nonce='{{ cspNonce }}'>
        {% for error in errors.list %}
        gtag('event', '{{ error.errorId }}', {
          'event_category': 'formValidationError',
          'event_label': '{{ error.name }}',
          'non_interaction': true
          });
        {% endfor %}
    </script>
{% endif %}