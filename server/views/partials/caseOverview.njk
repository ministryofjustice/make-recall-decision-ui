<h1 class='govuk-heading-m govuk-visually-hidden'>Overview</h1>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        {% set offenderManagerHtml %}
            <div>{{ case.offenderManager.name }} - {{ case.offenderManager.probationTeam.code }}, {{ case.offenderManager.probationTeam.label }}</div>
            <div>Telephone: {{ case.offenderManager.phoneNumber }}</div>
            <div>Email: <a href='mailto:{{ case.offenderManager.email }}' target='_blank' rel='noopener' data-qa='offenderManagerEmail'>{{ case.offenderManager.email }}</a></div>
        {% endset %}
        {{ appSummaryCard({
            titleText: 'Personal details',
            classes: 'govuk-!-margin-bottom-6 app-summary-card--large-title',
            html: govukSummaryList({
                rows: [
                    {
                        key: { html: 'Current address' },
                        value: { text: formatSingleLineAddress(case.currentAddress) }
                    },
                    {
                        key: { text: 'Offender manager' },
                        value: { html: offenderManagerHtml }
                    }
                ]
            })
        }) }}
    </div>
    <div class="govuk-grid-column-one-third-from-desktop" data-qa='riskFlags'>
        {{ riskFlagWidget(case.risk.flags) }}
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        {% set indexOffenceHtml %}
            <ul class='govuk-list'>
            {% for offence in case.indexOffences %}
            <li>{{ offence.description }}</li>
            {% endfor %}
            </ul>
        {% endset %}
        {{ appSummaryCard({
            titleText: 'Offence overview',
            classes: 'govuk-!-margin-bottom-6 app-summary-card--large-title',
            html: govukSummaryList({
                rows: [
                    {
                        key: { html: 'Index offence' },
                        value: { html: indexOffenceHtml }
                    }
                ]
            })
        }) }}
    </div>
</div>