<h1 class='govuk-heading-m govuk-visually-hidden'>Overview</h1>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        {% set offenceHtml %}
            <ul class='govuk-list'>
            {% for offence in caseSummary.offences %}
            <li>{{ offence.description }}</li>
            {% endfor %}
            </ul>
        {% endset %}
        {{ appSummaryCard({
            titleText: 'Offence overview',
            classes: 'govuk-!-margin-bottom-6 app-summary-card--large-title',
            html: govukSummaryList({
                rows: [
                    {
                        key: { html: 'Offences' if caseSummary.offences.length > 1 else 'Offence' },
                        value: { html: offenceHtml }
                    }
                ]
            })
        }) }}
    </div>
</div>