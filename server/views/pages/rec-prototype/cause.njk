{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: "What has led to this recall?", hasErrors: errors }) %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: '/rec-prototype/' + crn + '/summary'
    }) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            <div class="govuk-caption-l">Compliance</div>
            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div class="govuk-form-group">
                    {% set hintHtml %}
                        <p class='govuk-body'>Explain why the risk cannot be managed in the community.</p>
                        <p class='govuk-body'>Give details about:</p>
                        <ul class='govuk-list govuk-list--bullet'>
                            <li>further offending</li>
                            <li>police investigations / charges</li>
                            <li>court dates</li>
                            <li>any other relevant information</li>
                        </ul>
                    {% endset %}
                    {{ govukTextarea({
                        name: "cause",
                        id: "cause",
                        label: {
                            text: "What has led to this recall?",
                            classes: "govuk-label--l",
                            isPageHeading: true
                        },
                        hint: {
                            html: hintHtml
                        },
                        value: recommendation.cause
                    }) }}
                </div>
                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}

