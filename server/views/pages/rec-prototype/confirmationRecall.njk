{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: "Part A created", hasErrors: errors }) %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% set html %}
                {{ recommendation.recallType.text }}<br />
                <strong>{{ personalDetailsOverview.name }}</strong>
            {% endset %}
            {{ govukPanel({
                titleText: "Part A created",
                html: html
            }) }}
            <h2 class='govuk-heading-m govuk-!-margin-top-6'>What happens next</h2>
            <p class='govuk-body'>OAsys R6.1, R6.2 and R10 have been attached to the Part A.</p>

            <p class='govuk-body'><a class='govuk-link' href='/assets/part_a.docx' target='_blank'>Download the Part A</a>. Then you can upload it to NDelius.</p>
        </div>
    </div>

{% endblock %}

