{% extends "../../../../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../../../../partials/error-summary.njk' %}

            {{ heading(pageHeadings[page.id]) }}
            {{ bodyParagraph('Update the information to record in PPUD') }}

            {{ heading('Currently in PPUD', 2, 'm', 'govuk-!-padding-top-2 govuk-!-margin-bottom-1') }}
            {{ bodyParagraph(existingSentencingCourt, 'govuk-!-margin-bottom-6') }}

            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                {{ accessibleAutocomplete({
                    id: 'sentencingCourt',
                    label: {
                        text: 'Select the sentencing court',
                        class: 'govuk-label--m '
                    },
                    class: 'govuk-!-margin-bottom-7 govuk-input--width-30',
                    errorMessage: errorMessage(errors.sentencingCourt),
                    list: allCourts,
                    value: sentencingCourt,
                    placeholder: 'Search for a sentencing court',
                    nonce: cspNonce
                }) }}

                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}
