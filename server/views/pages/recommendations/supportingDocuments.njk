{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full-from-desktop">
            <h1 class='govuk-heading-l'>{{ pageHeadings[page.id] }}</h1>


            <table class="govuk-table">
                <caption class="govuk-table__caption govuk-visually-hidden">Persons found</caption>
                <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Document title</th>
                    <th scope="col" class="govuk-table__header">Filename</th>
                    <th scope="col" class="govuk-table__header">Action</th>
                </tr>
                </thead>
                <tbody class="govuk-table__body">
                {% for document in documents %}
                    <tr class="govuk-table__row"  data-qa='{{ loop.index }}' >
                        <td class="govuk-table__cell govuk-!-font-weight-bold">
                            {{ document.title }}
                        </td>
                        <td class="govuk-table__cell">
                            {{ document.filename }}
                        </td>
                        <td class="govuk-table__cell">
                            {% if document.id %}
                                <a class='govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-3'
                                    href='/recommendations/{{ recommendation.id }}/xyz'>
                                    Change
                                </a>
                                <a class='govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-3'
                                    href='/recommendations/{{ recommendation.id }}/xyz'>
                                    Remove
                                </a>
                            {% else %}
                                <a class='govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-3'
                                    href='/recommendations/{{ recommendation.id }}/supporting-documents'>
                                    Upload
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="govuk-grid-row">
                <a class='govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-3'
                   href='/recommendations/{{ recommendation.id }}/check-booking-details'>
                    Add another document
                </a>
                <a class='govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-3'
                   href='/recommendations/{{ recommendation.id }}/check-booking-details'>
                    Add a minute
                </a>
            </div>
            <div class="govuk-grid-row">
                <a class='govuk-button govuk-button--primary govuk-!-margin-top-2 govuk-!-margin-bottom-3'
                   href='/recommendations/{{ recommendation.id }}/check-booking-details'>
                    Save
                </a>
            </div>

        </div>
    </div>
{% endblock %}
