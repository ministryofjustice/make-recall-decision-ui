{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitle, hasErrors: errors }) %}

{% block beforeContent %}
    <nav>
    {{ govukBackLink({
        text: "Back",
        href: '/recommendations/' + recommendation.id + '/emergency-recall'
    }) }}</nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <input type="hidden" name="crn" value="{{ recommendation.crn }}" />
                <div class="govuk-caption-l">Custody</div>
                {% set yesPoliceDetailHtml %}
                    {{ govukTextarea({
                        name: "custodyStatusDetailsYesPolice",
                        id: "custodyStatusDetailsYesPolice",
                        label: {
                            text: "Custody address",
                            classes: "govuk-label--s"
                        },
                        value: inputDisplayValues.details,
                        errorMessage: errorMessage(errors.custodyStatusDetailsYesPolice)
                    }) }}
                {% endset %}
                {{ govukRadios({
                    idPrefix: "custodyStatus",
                    name: "custodyStatus",
                    fieldset: {
                        legend: {
                            text: pageHeading,
                            classes: "govuk-fieldset__legend--l",
                            isPageHeading: true
                        }
                    },
                    items: radioCheckboxItems({
                        items: formOptions.custodyStatus,
                        currentValues: inputDisplayValues.value,
                        conditionalContent: {
                            YES_POLICE: yesPoliceDetailHtml
                        }
                    }),
                    errorMessage: errorMessage(errors.custodyStatus)
                }) }}
                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}

