{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitle, hasErrors: errors }) %}

{% block beforeContent %}
    <nav>
    {{ govukBackLink({
        text: "Back to overview for " + recommendation.personOnProbation.name,
        href:  '/cases/' + recommendation.crn + '/overview'
    }) }}
    </nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <h1 class='govuk-heading-l'>{{ pageHeading }}</h1>
            <p class='govuk-body'>Youâ€™re recommending a recall for {{ recommendation.personOnProbation.name }}.
                    Complete the following sections of the Part A form. You can do this in any order.
            </p>
            <ol class="moj-task-list govuk-!-margin-top-8">
                <li>
                    <h2 class="moj-task-list__section">
                        Recommendation
                    </h2>
                    <ul class="moj-task-list__items">
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}recall-type">What you recommend</a>
                            {{ taskStatus({ hasData: recommendation.recallType.selected }) }}
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="moj-task-list__section">
                        Alternatives to recall
                    </h2>
                    <ul class="moj-task-list__items">
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}alternatives-tried">Alternatives
                                tried already</a>
                            {{ taskStatus({ hasData: recommendation.alternativesToRecallTried.selected.length }) }}
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="moj-task-list__section">
                        Circumstances
                    </h2>
                    <ul class="moj-task-list__items">
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}response-to-probation">Response to probation so far</a>
                            {{ taskStatus({ hasData: recommendation.responseToProbation }) }}
                        </li>
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}licence-conditions">Breached licence condition(s)</a>
                            {{ taskStatus({ hasData: recommendation.licenceConditionsBreached.standardLicenceConditions.selected.length or recommendation.licenceConditionsBreached.additionalLicenceConditions.selected.length }) }}
                        </li>
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}emergency-recall">Emergency recall</a>
                            {{ taskStatus({ hasData: isNotNull(recommendation.isThisAnEmergencyRecall) }) }}
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="moj-task-list__section">
                        Vulnerability and additional needs
                    </h2>
                    <ul class="moj-task-list__items">
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}vulnerabilities">Would recall affect vulnerability or additional
                                needs?</a>
                            {{ taskStatus({ hasData: recommendation.vulnerabilities.selected.length }) }}
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="moj-task-list__section">
                        Victim liaison
                    </h2>
                    <ul class="moj-task-list__items">
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}victim-contact-scheme">Are there any victims in the victim contact scheme?</a>
                            {{ taskStatus({ hasData: recommendation.hasVictimsInContactScheme.selected }) }}
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="moj-task-list__section">
                        Custody
                    </h2>
                    <ul class="moj-task-list__items">
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}custody-status">Is {{ recommendation.personOnProbation.name }} in
                                custody now?</a>
                            {{ taskStatus({ hasData: recommendation.custodyStatus.selected }) }}
                        </li>
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}police-details">Local police contact details</a>
                            {{ taskStatus({ hasData: recommendation.localPoliceContact.contactName }) }}
                        </li>
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}iom">Is {{ recommendation.personOnProbation.name }} under Integrated Offender Management (IOM)?</a>
                            {{ taskStatus({ hasData: recommendation.isUnderIntegratedOffenderManagement.selected }) }}
                        </li>
                        <li class="moj-task-list__item">
                            <a class="moj-task-list__task-name" href="{{ pageUrlBase }}arrest-issues">Is there anything the police should know before they arrest {{ recommendation.personOnProbation.name }}?</a>
                            {{ taskStatus({ hasData: isNotNull(recommendation.hasArrestIssues) }) }}
                        </li>
                    </ul>
                </li>
            </ol>
            <div>
                <a href='{{ pageUrlBase }}confirmation-part-a' class='govuk-button govuk-button--primary'>Create Part A</a>
            </div>
        </div>
    </div>

{% endblock %}

