{% extends "../../partials/layout.njk" %}
{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}
{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    {{ page.title }}
                </h1>
                <div class="govuk-panel__body" data-qa="fullName">
                    {{ personOnProbation }}
                </div>
                <div class="govuk-panel__body" data-qa="crn">
                    CRN: {{ crn }}
                </div>
            </div>
            <h1 class="govuk-heading-m">What happens next</h1>
            <p class="govuk-body">
                {{ page.bodyText1 }}
            </p>
            <ul class='govuk-list govuk-list--bullet'>
                <li>name - {{ personOnProbation }}</li>
                <li>CRN - {{ crn }}</li>
                <li>{{ reasonText }}
                    <div class="govuk-inset-text" data-qa="reason">
                        <pre class='govuk-body'>
                            {{ spoRecallRationale }}
                        </pre>
                        {% if isResidentWorker %}
                            <pre class='govuk-body'>Manager(s) name: {{ odmName }}</pre>
                        {% endif %}
                    </div>
                </li>
            </ul>
            <p class="govuk-body">
                {{ page.bodyText2 }}
            </p>
            <p class="govuk-body">
                <a href="/cases/{{ crn }}/overview" class="govuk-link">Return to overview</a>
            </p>
        </div>
    </div>
{% endblock %}