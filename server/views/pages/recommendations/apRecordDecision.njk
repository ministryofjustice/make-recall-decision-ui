{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <input type="hidden" name="crn" value="{{ recommendation.crn }}" />

                {% set hintHtml %}
                <p class="govuk-body">
                    This will be recorded as a contact in NDelius called ‘Management oversight- recall’. You cannot undo this.
                </p>
                <div class="govuk-inset-text" data-qa="reason">
                    <pre class='govuk-body'>
                    {{ spoRecallRationale }}
                    </pre>
                </div>
                {% endset %}
                {{ govukCheckboxes({
                    name: "sensitive",
                    fieldset: {
                      legend: {
                        text: "Record the explanation in NDelius",
                        isPageHeading: true,
                        classes: "govuk-fieldset__legend--l"
                      }
                    },
                    hint: {
                      html: hintHtml
                    },
                    items: [
                      {
                        value: "sensitive",
                        text: "Contains sensitive information - do not show to the person on probation"
                      }
                    ]
                }) }}
                  {{ formSubmitButton({
                        label: 'Send to NDelius'
                    }) }}
            </form>
        </div>
    </div>
{% endblock %}

