{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{{  logMessage(pageTitle) }}

{% block beforeContent %}
    <nav>
    {{ govukBackLink({
        text: "Back",
        href: nextPageLinkUrl({ nextPageId: backLink, urlInfo: urlInfo })
    }) }}</nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">

            <h1 class="govuk-heading-l">{{ pageHeadings[page.id] }}</h1>

            <p class='govuk-body'>Now you can share this case with your manager.</p>

            <ol class='govuk-list govuk-list--number'>
                <li>
                    Copy this link.
                    <div class='govuk-share-widget'>
                        <b>Concerns about {{ recommendation.personOnProbation.name }}</b>
                        <div class='mid-grey-panel'>
                            <pre class='govuk-body govuk-!-margin-0 govuk-!-padding-1 govuk-share-link' data-js='copy-to-clipboard-text' data-qa='case-link'>{{ link }}</pre>
                        </div>
                        <button class='govuk-button govuk-button--secondary govuk-!-margin-top-2' data-js='copy-to-clipboard-btn'>Copy</button>
                    </div>
                </li>
                <li>Paste it into an email or Teams message.</li>
                <li>Send it to your manager.</li>
                <li>Discuss the case together before making a decision.</li>
            </ol>
             <div>
                <a href='{{urlInfo.pageBase}}discuss-with-manager' class='govuk-button govuk-button--primary'>Continue</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block bodyEnd %}
    {{ super() }}
    <script src="/assets/copyToClipboard.js" defer></script>
{% endblock %}