{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitle, hasErrors: errors }) %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            {% set html %}
                {{ getDisplayValueForOption({ value: recommendation.recallType.selected.value, allOptions: formOptions.recallType }) }}
                <div class='govuk-!-margin-top-1 govuk-!-margin-bottom-1'>{{ recommendation.crn }}</div>
                <div class='govuk-!-font-weight-bold'>{{ recommendation.personOnProbation.name }}</div>
            {% endset %}
            {{ govukPanel({
                titleText: pageHeading,
                html: html
            }) }}
            <h2 class='govuk-heading-m govuk-!-margin-top-6'>What happens next</h2>
            <p class='govuk-body'>
                <a class='govuk-link' href='/recommendations/{{ recommendation.id }}/documents/part-a' download>
                    Download the Part A.</a> Then you can upload it to NDelius.
            </p>
            <p class='govuk-body govuk-!-margin-top-6'><a class='govuk-link' href='/cases/{{ recommendation.crn }}/overview'>Back to case overview</a></p>
        </div>
    </div>
{% endblock %}

