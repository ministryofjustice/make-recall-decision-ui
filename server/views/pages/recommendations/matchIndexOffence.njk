{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            <h1 class='govuk-heading-l'>{{ pageHeadings[page.id] }}</h1>

            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                <p class='govuk-body'>You selected this index offence.  Now select the nearest match from the list in PPUD.</p>

                <div class="govuk-inset-text" data-qa="reason">
                    <span class='govuk-body  govuk-!-font-weight-bold'> {{ offence.offenceDescription }} </span><br/>
                    <span class='govuk-body'> Start date: {{ formatDateTimeFromIsoString({isoDate: offence.sentenceStartDate, dateOnly: true}) }} </span><br/>
                    <span class='govuk-body'> Sentence end date: {{ hyphenForBlank(formatDateTimeFromIsoString({isoDate: offence.sentenceEndDate, dateOnly: true})) }} </span>
                </div>

                {{ govukSelect({
                  id: "indexOffence",
                  name: "indexOffence",
                  label: {
                    text: "PPUD list of offences",
                    classes: "govuk-label--m"
                  },
                  value: recommendation.bookRecallToPpud.indexOffence,
                  items: indexOffences
                }) }}

                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}