{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            <h1 class='govuk-heading-l'>{{ pageHeadings[page.id] }}</h1>

            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                <p class='govuk-body'>You selected this index offence.  Now select the nearest match from the list in PPUD.</p>

                <div class="govuk-inset-text">
                    <dl class="govuk-text-list">
                        <h5 class='govuk-heading-s' data-qa="offenceDescription">{{ offence.offenceDescription }}A</h5>
                        <div class="govuk-text-list__row">
                            <dt class="govuk-text-list__key">Start date</dt>
                            <dd class="govuk-text-list__value" data-qa="sentenceStartDate"> {{ formatDateTimeFromIsoString({isoDate: offence.sentenceStartDate, dateOnly: true}) }} </dd>
                        </div>
                        <div class="govuk-text-list__row">
                            <dt class="govuk-text-list__key">Sentence expiry date</dt>
                            <dd class="govuk-text-list__value" data-qa="sentenceEndDate"> {{ formatDateTimeFromIsoString({isoDate: offence.sentenceEndDate, dateOnly: true}) }} </dd>
                        </div>
                    </dl>
                </div>

                {{ govukSelect({
                  id: "indexOffence",
                  name: "indexOffence",
                  label: {
                    text: "PPUD list of offences"
                  },
                  errorMessage: errorMessage(errors.indexOffence),
                  value: recommendation.bookRecallToPpud.indexOffence,
                  items: indexOffences
                }) }}

                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}