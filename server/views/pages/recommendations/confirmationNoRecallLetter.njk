{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    <nav>
        {{ govukBackLink({
            text: "Back",
            href:  urlInfo.basePath + 'task-list-no-recall'
        }) }}
    </nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}
            {% set html %}
                <div class='govuk-!-margin-top-1 govuk-!-margin-bottom-1'>{{ recommendation.crn }}</div>
                <div class='govuk-!-font-weight-bold'>{{ recommendation.personOnProbation.name }}</div>
            {% endset %}
            {{ govukPanel({
                titleText: pageHeadings[page.id],
                html: html
            }) }}
            <h2 class='govuk-heading-m govuk-!-margin-top-6'>What happens next</h2>
            <p class='govuk-body'>
                <a class='govuk-link' href='/recommendations/{{ recommendation.id }}/documents/no-recall-letter' download>
                    Download the decision not to recall letter.</a>
            </p>
            <p class='govuk-body'>Upload the decision not to recall letter to NDelius.</p>
            <p class='govuk-body govuk-!-margin-top-6'><a class='govuk-link' href='/cases/{{ recommendation.crn }}/overview'>Return to overview of {{ recommendation.personOnProbation.name }}</a></p>
        </div>
    </div>
{% endblock %}

