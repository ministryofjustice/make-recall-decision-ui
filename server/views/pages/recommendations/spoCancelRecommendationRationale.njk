{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({
    pageHeading: pageTitles[page.id],
    hasErrors: errors
}) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <h1 class='govuk-heading-l'>{{ pageHeadings[page.id] }}</h1>
            <p class="govuk-body">You're about to {{ page.bodyText }}. You cannot undo this.</p>
            {% include '../../partials/error-summary.njk' %}
            {% set cancelRationaleHtml %}
            {% set textboxLabel %}
                Explain why youâ€™re cancelling this {{ headingText }}
            {% endset %}
            {{ govukTextarea({
                    name: "spoCancelRecommendationRationale",
                    id: "spoCancelRecommendationRationale",
                    label: {
                        text: textboxLabel,
                        classes: "govuk-label--m"
                    },

                    hint: {
                        text: "This will help with future recommendations. You'll record your explanation in NDelius on the next page."
                    }
                }) 
            }}
            {% endset %}
            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                <input type="hidden" name="crn" value="{{ recommendation.crn }}"/>

                {{ cancelRationaleHtml | safe }}
                <p class='govuk-button-group'>
                    <a  class="govuk-button"
                        href="">{{ buttonText }}</a>

                    <a  class="govuk-link govuk-link--no-visited-state" 
                        href="/cases/{{ recommendation.crn }}/overview">Do not cancel</a>
                </p>
            </form>
        </div>
    </div>
</div>
{% endblock %}