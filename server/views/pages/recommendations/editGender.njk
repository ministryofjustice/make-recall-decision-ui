{% extends "../../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: pageTitles[page.id], hasErrors: errors }) %}

{% block beforeContent %}
    {{ backLink() }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../../partials/error-summary.njk' %}

            {% set html %}
                <p class="govuk-body">This will update PPUD.  It will not update NOMIS.</p>
            {% endset %}
            {{ govukNotificationBanner({
                html: html,
                classes: "govuk-notification-banner--info govuk-body"
            }) }}

            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                {{ govukRadios({
                    idPrefix: "gender",
                    name: "gender",
                    fieldset: {
                        legend: {
                            text: pageHeadings[page.id],
                            classes: "govuk-fieldset__legend--l",
                            isPageHeading: true
                        }
                    },
                    items: radioCheckboxItems({
                        items: genders,
                        currentValues: recommendation.bookRecallToPpud.gender
                    }),
                    errorMessage: errorMessage(errors.genders)
                }) }}

                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}