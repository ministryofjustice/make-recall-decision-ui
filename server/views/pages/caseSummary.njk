{% extends "../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: section.label + " - Case summary", hasErrors: errors }) %}

{% block headEnd %}
    {% if section.id == 'overview' %}
    <link rel="prefetch" href="{{ pageUrlBase }}contact-history" as="document">
    <link rel="prefetch" href="{{ pageUrlBase }}overview" as="document">
    <link rel="prefetch" href="{{ pageUrlBase }}risk" as="document">
    <link rel="prefetch" href="{{ pageUrlBase }}personal-details" as="document">
    <link rel="prefetch" href="{{ pageUrlBase }}licence-conditions" as="document">
    {% endif %}
{% endblock %}

{% block beforeContent %}
    <nav aria-label='Back to person search'>
        {{ govukBackLink({
            html: "Back<span class='govuk-visually-hidden'> to person search</span>",
            href: '/search'
        }) }}
    </nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% include '../partials/error-summary.njk' %}
            <div class='flex-desktop flex--space-between flex--align-center'>
                <div class='govuk-!-margin-bottom-8'>
                    <ul class="govuk-list govuk-caption-m inline-list-from-tablet">
                        <li>CRN: <span
                                    data-qa='personalDetailsOverview-crn'>{{ caseSummary.personalDetailsOverview.crn }}</span><span
                                    class='govuk-!-padding-left-3 govuk-!-padding-right-3 hide-mobile'>|</span></li>
                        <li>Date of birth: <span
                                    data-qa='personalDetailsOverview-dateOfBirth'>{{ formatDateTimeFromIsoString({isoDate: caseSummary.personalDetailsOverview.dateOfBirth}) }}</span>
                            (age <span
                                    data-qa='personalDetailsOverview-age'>{{ caseSummary.personalDetailsOverview.age }}</span>)<span
                                    class='govuk-!-padding-left-3 govuk-!-padding-right-3 hide-mobile'>|</span></li>
                        <li>Gender: <span
                                    data-qa='personalDetailsOverview-gender'>{{ caseSummary.personalDetailsOverview.gender }}</span>
                        </li>
                    </ul>
                    <div class="govuk-heading-xl govuk-!-margin-bottom-0"
                         data-qa='sectionHeading'>{{ caseSummary.personalDetailsOverview.name }}</div>
                </div>
                {% if caseSummary.activeRecommendation.recommendationId %}
                    <a class='govuk-button' href='/recommendations/{{ caseSummary.activeRecommendation.recommendationId }}/task-list' data-analytics-event='click_cta' data-analytics-event-category='update_recommendation_click'>Update recommendation</a>
                {% else %}
                <form method='post' action='/recommendations'>
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                    <input type="hidden" name="crn" value="{{ caseSummary.personalDetailsOverview.crn }}" />
                    <button class='govuk-button no-wrap-tablet' data-analytics-event='click_cta' data-analytics-event-category='make_recommendation_click'>Make a recommendation</button>
                </form>
                {% endif %}
                {% if flags.flagRecommendationPrototype %}
                    <div>
                        Prototype: <a href='/rec-prototype/{{ caseSummary.personalDetailsOverview.crn }}/no-recall-summary?partClearNoRecall=1' class='govuk-button no-wrap-tablet'>Update recommendation</a>
                    </div>
                {% endif %}
            </div>
            {{ mojSubNavigation({
                label: 'Case summary sections',
                items: removeUndefinedListItems([
                    {
                        text: 'Overview',
                        href: pageUrlBase + 'overview',
                        active: section.id == 'overview'
                    },
                    {
                        text: 'Risk',
                        href: pageUrlBase + 'risk',
                        active: section.id == 'risk'
                    },
                    {
                        text: 'Personal details',
                        href: pageUrlBase + 'personal-details',
                        active: section.id == 'personal-details'
                    },
                    {
                        text: 'Licence conditions',
                        href: pageUrlBase + 'licence-conditions',
                        active: section.id == 'licence-conditions'
                    },
                    {
                        text: 'CVL data',
                        href: pageUrlBase + 'licence-conditions-cvl',
                        active: section.id == 'licence-conditions-cvl'
                    } if flags.flagCreateVaryLicenceData else undefined,
                    {
                        text: 'Contact history',
                        href: pageUrlBase + 'contact-history',
                        active: section.id == 'contact-history'
                    },
                    {
                        text: 'Recommendations',
                        href: pageUrlBase + 'recommendations',
                        active: section.id == 'recommendations'
                    } if flags.flagRecommendationsPageProd else undefined,
                    {
                        text: 'Recommendations',
                        href: pageUrlBase + 'recommendations-prototype',
                        active: section.id == 'recommendations-prototype'
                    } if flags.flagRecommendationsPagePrototype else undefined
                ])
            }) }}
            {% if section.id =='overview' %}
                {% include '../partials/caseOverview.njk' %}
            {% elseif section.id =='risk' %}
                {% include '../partials/caseRisk.njk' %}
            {% elseif section.id =='personal-details' %}
                {% include '../partials/casePersonalDetails.njk' %}
            {% elseif section.id =='licence-conditions' %}
                {% include '../partials/caseLicenceConditions.njk' %}
            {% elseif section.id =='licence-conditions-cvl' %}
                {% include '../partials/caseLicenceConditionsCvl.njk' %}
            {% elseif section.id =='contact-history' %}
                {% include '../partials/caseContactHistory.njk' %}
            {% elseif section.id =='recommendations' %}
                {% include '../partials/caseRecommendations.njk' %}
            {% elseif section.id =='recommendations-prototype' %}
                {% include '../partials/caseRecommendationsPrototype.njk' %}
            {% endif %}
        </div>
    </div>
{% endblock %}
