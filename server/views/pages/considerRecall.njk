{% extends "../partials/layout.njk" %}

{% set pageTitle = makePageTitle({ pageHeading: "Consider a recall", hasErrors: errors }) %}

{% block beforeContent %}
    <nav>
        {{ govukBackLink({
            text: "Back",
            href: nextPageLinkUrl({ nextPagePath: pageUrlBase + 'overview', urlInfo: urlInfo })
        }) }}
    </nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            {% include '../partials/error-summary.njk' %}
            <form novalidate method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <input type="hidden" name="crn" value="{{ caseSummary.personalDetailsOverview.crn }}" />
                <input type="hidden" name="recommendationId" value="{{ caseSummary.activeRecommendation.recommendationId }}" />
                <div class="govuk-caption-l">Consider a recall</div>
                {{ govukTextarea({
                    name: "recallConsideredDetail",
                    id: "recallConsideredDetail",
                    label: {
                        text: "Consider a recall",
                        classes: "govuk-label--l",
                        isPageHeading: true
                    },
                    hint: {
                        html: "What has made you think about recalling " + caseSummary.personalDetailsOverview.name + "?"
                    },
                    value: inputDisplayValue,
                    errorMessage: errorMessage(errors.recallConsideredDetail)
                }) }}
                {{ formSubmitButton() }}
            </form>
        </div>
    </div>
{% endblock %}

